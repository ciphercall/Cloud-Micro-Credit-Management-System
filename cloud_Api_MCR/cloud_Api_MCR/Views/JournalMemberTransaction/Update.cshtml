            </button>
            <ul class="dropdown-menu pull-right" style="" role="menu">
                <li>
                    @if (updateStatus == 'A'.ToString())
                    {
                        <a href="@Url.Action("Create", "JournalMemberTransaction")"><i class="fa fa-file-text"></i> Create</a>
