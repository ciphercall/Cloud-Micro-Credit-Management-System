@model IEnumerable<cloud_Api_MCR.Models.ASL_DTO.ViewUserReport>
@{
    ViewBag.Title = "GetUserLogResult";
    Layout = null;

    TimeZoneInfo timeZoneInfo;
    timeZoneInfo = TimeZoneInfo.FindSystemTimeZoneById("Central Asia Standard Time");
    DateTime currentDateTime = TimeZoneInfo.ConvertTime(DateTime.Now, timeZoneInfo);

}




<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/Content/reportcss/style.css" rel="stylesheet" />
</head>

<body style=" background-color:#fafafa;">
    @*<input id="print" tabindex="1" type="button" value="Print" onclick="ClosePrint()" />*@
    <div style="width: 960px; margin: 0px auto; border: 1px solid #d3d3d3; border-radius: 5px; box-shadow: 0 0 5px rgba(0, 0, 0, 0.1); background: none repeat scroll 0 0 white;">
        <table id="mainTable" border="0" width="100%">
            <thead>
                <tr>
                    <th width="5%"></th>
                    <th width="5%"></th>
                    <th width="5%"></th>
                    <th width="5%"></th>
                    <th width="5%"></th>
                    <th width="5%"></th>
                    <th width="5%"></th>
                    <th width="5%"></th>
                    <th width="5%"></th>
                    <th width="5%"></th>
                    <th width="5%"></th>
                    <th width="5%"></th>
                    <th width="5%"></th>
                    <th width="5%"></th>
                    <th width="5%"></th>
                    <th width="5%"></th>
                    <th width="5%"></th>
                    <th width="5%"></th>
                    <th width="5%"></th>
                    <th width="5%"></th>
                </tr>
                @Html.Partial("~/Views/Shared/_HeaderReportsDiv.cshtml")

                <tr>
                    <td colspan="13" align="left" style="padding: 4px; font-weight: bold">User Log Data List</td>
                    <td align="right" colspan="7" style="padding:8px">Print:@currentDateTime.ToString("dd-MM-yy hh:mm tt")</td>
                </tr>
                <tr style="outline: thin solid">
                    <td colspan="10" style="padding:4px">User Name: <span style="font-weight: bold">@ViewBag.UserName</span></td>
                    <td colspan="2" align="right">From:</td>
                    <td colspan="3" style="font-weight: bold">@ViewBag.FromDate</td>
                    <td colspan="2" align="right">To:</td>
                    <td colspan="3" style="font-weight: bold">@ViewBag.ToDate</td>

                </tr>

                <tr style="background-color: #00689b; outline: thin solid">
                    <td colspan="3" style="color: white; padding: 4px">Log Type</td>
                    <td colspan="4" style="color: white; padding: 4px">Log Date-Time</td>
                    <td colspan="13" style="color: white; padding: 4px">Log Data</td>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td colspan="3" style="padding:4px">@Html.DisplayFor(modelItem => item.LogType)</td>
                        <td colspan="4" style="padding: 4px">
                            @Html.DisplayFor(modelItem => item.LogDate)
                            @Html.DisplayFor(modelItem => item.LogTime)
                        </td>
                        <td colspan="13" style="padding: 4px">@Html.DisplayFor(modelItem => item.LogData)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
